int circleOfNumbers(int n, int firstNumber) {
    
    int half=n/2;
    
    int result =0;
    
    if(firstNumber < half){
            result=firstNumber+half;
    }else if(firstNumber > half){
            result=firstNumber-half;
    }else if(firstNumber == half){
        result = 0;
    }
    
    return result;
    
    

}
